statusText.Text := "도사 헬퍼 - 밀대 모드"
Loop {
    if RUNNING_STATUS {
        if (existSaybox()) {
            fixTargetTab()
        }
        Send("1")
        Loop 3 {
            Sleep(50)
            Send("{" heal "}")
        }
        if AUTO_DEBUFF {
            Send("{Esc}")
            Sleep(100)
            autoTargetCastSpell(hon)
            Sleep(100)
            allKeyUp()
            fixTargetTab()
        }
        if getMpPortion() < 30 {
            Send("{" gongjeung "}")
        }
        if selfhealMode {
            if getHpPortion() < 30 {
                selfHeal(2)
                fixTargetTab()
            }
        }

    }
    Sleep(20)
}